{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node", // Use "node" for Next.js
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"] // Ensure this matches your project structure
    },
    "target": "ES2020", // Updated to ES2020 for modern features
    "noImplicitAny": false, // Temporarily disable to avoid issues with `any` types
    "strictNullChecks": true, // Enable for better type safety
    "baseUrl": "." // Add baseUrl to resolve paths correctly
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}